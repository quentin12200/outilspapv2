# Configuration pour o2switch/cPanel
# Copiez ce fichier en .env et remplissez les valeurs

# === Base de données ===
DATABASE_URL=sqlite:///./papcse.db
DB_URL=https://github.com/quentin12200/outilspapv2/releases/download/v1.0.0/papcse.db
DB_SHA256=2a699fe2236005cadc756ec59f8f21fa35fd542262823b9998b7fc49192d445d

# === API Sirene (INSEE) ===
# OBLIGATOIRE : Obtenez votre clé sur https://api.insee.fr/catalogue/
SIRENE_API_KEY=VOTRE_CLE_API_SIRENE

# === OpenAI API ===
# OBLIGATOIRE : Obtenez votre clé sur https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-VOTRE_CLE_OPENAI

# Modèle OpenAI (optionnel)
OPENAI_MODEL=gpt-4o

# === Invitations PAP automatiques ===
# INVITATIONS_URL=https://github.com/quentin12200/outilspapv2/releases/download/v1.0.0/invitations.xlsx
# INVITATIONS_AUTO_IMPORT=false

# === Reconstruction automatique ===
AUTO_BUILD_SUMMARY_ON_STARTUP=false

# === Kit PDF ===
KIT_PDF_CACHE_ENABLED=true
KIT_PDF_AUTO_WARM=true
KIT_PDF_TIMEOUT=60

# === Mode debug ===
# DEBUG=false
